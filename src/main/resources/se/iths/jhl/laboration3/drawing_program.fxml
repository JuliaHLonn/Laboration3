<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="se.iths.jhl.laboration3.Controller.DrawingProgramController">
   <top>
       <VBox>
       <MenuBar>
           <Menu text="File">
               <MenuItem text="Undo" />
               <MenuItem text="Save" />
                   </Menu>

       </MenuBar>
       </VBox>
<Label text="Draw shapes!"/>
       <ToolBar>
           <HBox alignment="CENTER" spacing="5">
               <fx:define>
                   <ToggleGroup fx:id="toggleShape"/>
               </fx:define>
               <ColorPicker fx:id="colorPicker"/>
               <RadioButton fx:id="cirkleButton" text="Draw Cirkle" toggleGroup="$toggleShape"/>
               <RadioButton fx:id="rectangleButton" text="Draw Rectangle" toggleGroup="$toggleShape"/>
               <Button fx:id="undoButton" text="Undo"/>
           </HBox>
       </ToolBar>
   </top>
    <center>
      <VBox alignment="CENTER" prefHeight="800.0" prefWidth="700.0" style="-fx-background-color: #FFFAE7">

          <Canvas fx:id="canvas" height="800.0" width="700.0" onMouseClicked="#onCanvasClicked"/>

      
      </VBox>
   </center>
</BorderPane>
